@model Models.WeatherForecast[];
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Summary</th>
                <th>Temperature (C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var forecast in Model) {
                <tr>
                    <td>@forecast.Date.ToString("MMMM d yyyy")</td>
                    <td>@forecast.Summary</td>
                    <td>@forecast.TemperatureC</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td>Avg: @Model.Average(f => f.TemperatureC)</td>
            </tr>
        </tfoot>
    </table>
</div>